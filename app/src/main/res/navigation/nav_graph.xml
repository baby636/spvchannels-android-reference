<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/startupFragment"
        android:name="com.nchain.spvchannels.host.screens.startup.StartupFragment"
        android:label="StartupFragment"
        tools:layout="@layout/fragment_startup">
        <action
            android:id="@+id/action_startupFragment_to_channelsFragment"
            app:destination="@id/channelsFragment" />
        <action
            android:id="@+id/action_startupFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/channelsFragment"
        android:name="com.nchain.spvchannels.host.screens.channels.ChannelsFragment"
        android:label="ChannelsFragment"
        tools:layout="@layout/fragment_channels">
        <argument
            android:name="baseUrl"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <argument
            android:name="accountId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.nchain.spvchannels.host.screens.messages.MessagesFragment"
        android:label="MessagesFragment"
        tools:layout="@layout/fragment_messages">
        <argument
            android:name="baseUrl"
            app:argType="string" />
        <argument
            android:name="channelId"
            app:argType="string" />
        <argument
            android:name="token"
            app:argType="string" />
    </fragment>
</navigation>